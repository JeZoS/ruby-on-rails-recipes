<h1 align='center' >Create a new recipes</h1>
<hr />

<% if @recipe.errors.any? %>
    <%= pluralize(@recipe.errors.count,'error') %>
    prohibited this <%= @recipe.class %>'s creation
    <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
        <li > <%= msg %> </li>
    <% end %>
    </ul>
<% end %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="mb-3">
        <div class="form-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", 
                                placeholder: "Name of recipe",
                                autofocus: true %>
        </div>
      </div>
      <div class="mb-3">
        <div class="form-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description,
                    rows: 10, 
                    class: "form-control", 
                    placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12 col-md-offset-4 center">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>