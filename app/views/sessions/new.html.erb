<h1 align='center'>Login</h1>
<hr/>

<div class="row">
  <div class="col-md-12">
    <%= form_for(:session, :html => { class: "form-horizontal", role: "form" } , url: '/login' ) do |f| %>
        <div class="form-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-6">
          <%= f.email_field :email,
                    rows: 10, 
                    class: "form-control", 
                    placeholder: "Enter your email" %>
        </div>
      </>
      <div class="mb-3">
        <div class="form-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-6">
          <%= f.password_field :password,
                    rows: 10, 
                    class: "form-control", 
                    placeholder: "Enter your password" %>
        </div>
      </div>
     
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%# 
          <%= f.submit  class: "btn btn-primary" %>
            <%= f.submit 'Login' ,class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12 col-md-offset-4 center">
      [ <%= link_to "Cancel request", root_path %> ]
    </div>
  </div>
</div>